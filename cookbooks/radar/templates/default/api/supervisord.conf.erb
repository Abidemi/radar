[supervisord]
http_port=/var/tmp/radar-api-supervisord.sock
logfile=/var/log/radar-api-supervisord.log
logfile_maxbytes=50MB
logfile_backups=10
loglevel=info
pidfile=/var/run/radar-api-supervisord.pid
nodaemon=false
minfds=1024
minprocs=200

[supervisorctl]
serverurl=unix:///var/tmp/radar-api-supervisord.sock

[program:radar]
command=/opt/radar-api/venv/bin/python.sh /opt/radar-api/venv/bin/gunicorn --config /etc/radar-api/gunicorn.py 'radar.api.app:create_app()'
directory=/opt/radar-api
user=radar
autorestart=true
redirect_stderr=true
environment=RADAR_SETTINGS=/etc/radar-api/settings.py
